<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cinarli.cinarlionlineariza.ArizaEkle"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textViewwd"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="ARIZA EKLE"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_ariza_baslik"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/corner"
        android:backgroundTint="#ebebeb"
        android:ems="10"
        android:hint="BAŞLIK EKLE"
        android:inputType="text|textCapSentences|textAutoCorrect|textAutoComplete"
        android:paddingLeft="10dp"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewwd" />

    <EditText
        android:id="@+id/txt_ariza_aciklama"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/corner"
        android:backgroundTint="#ebebeb"
        android:ems="10"
        android:hint="AÇIKLAMA EKLE"
        android:inputType="text|textCapSentences|textAutoCorrect|textAutoComplete"
        android:paddingLeft="10dp"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ariza_baslik" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/corner"
        android:backgroundTint="#ebebeb"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ariza_aciklama" />

    <ImageButton
        android:id="@+id/img_btn_resim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/corner"
        android:backgroundTint="@color/colorPrimaryDark"
        android:padding="10dp"
        android:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/spinner1"
        app:layout_constraintTop_toBottomOf="@+id/spinner1"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner"
        android:backgroundTint="@android:color/holo_red_light"
        android:padding="10dp"
        android:text="Zorunlu"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/spinner1"
        app:layout_constraintEnd_toEndOf="@+id/txt_ariza_aciklama"
        app:layout_constraintTop_toTopOf="@+id/spinner1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/corner"
        android:backgroundTint="@android:color/holo_red_light"
        android:padding="10dp"
        android:text="Zorunlu"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_ariza_baslik"
        app:layout_constraintEnd_toEndOf="@+id/txt_ariza_aciklama"
        app:layout_constraintTop_toTopOf="@+id/txt_ariza_baslik" />

    <Button
        android:id="@+id/btn_gonder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/corner"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="GÖNDER"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TXT_DRM"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/corner"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="FOTOĞRAF YÜKLENMEDİ"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_btn_resim"
        app:layout_constraintEnd_toEndOf="@+id/spinner1"
        app:layout_constraintStart_toEndOf="@+id/img_btn_resim"
        app:layout_constraintTop_toTopOf="@+id/img_btn_resim" />

</android.support.constraint.ConstraintLayout>
